{
  "manifest_version": 3,
  "name": "EstoBoost - Помощник для изучения эстонского языка",
  "version": "1.0.0",
  "description": "Эффективное изучение эстонского языка с интеллектуальной подсветкой слов и системой коллекций. Идеально для русскоговорящих читающих эстонский контент.",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://sonaveeb.ee/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ekilexApi.js", "content.js"],
      "css": ["css/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
